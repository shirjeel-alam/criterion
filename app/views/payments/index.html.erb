<h1>Listing payments</h1>

<table>
  <tr>
    <th>Payable</th>
    <th>Payable type</th>
    <th>Period</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Payment type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.payable_id %></td>
    <td><%= payment.payable_type %></td>
    <td><%= payment_period_output(payment) %></td>
    <td><%= payment.amount %></td>
    <td><%= payment_status_output(payment) %></td>
    <td><%= payment_type_output(payment) %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

