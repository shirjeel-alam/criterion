<%= semantic_form_for [:admin, @mail], :builder => ActiveAdmin::FormBuilder do |f|
  f.inputs do
    f.inputs do
  		f.input :from, :required => true
  		f.input :to, :as => :check_boxes, :collection => @mail.to, :required => true, :include_blank => false
  		f.input :cc, :hint => 'Semicolon separated list of email addresses'
  		f.input :bcc, :hint => 'Semicolon separated list of email addresses'
  		f.input :subject
  		f.input :body, :required => true
  	end
  	
  	f.buttons
  end
end %>