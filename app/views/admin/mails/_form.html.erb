<%= semantic_form_for [:admin, @mail], :builder => ActiveAdmin::FormBuilder do |f|
  f.inputs do
    f.inputs do
  		f.input :from, :required => true
  		f.input :to, :as => :check_boxes, :collection => @course.emails, :required => true, :include_blank => false
  		f.input :cc, :hint => 'Comma separated list of email addresses'
  		f.input :bcc, :hint => 'Comma separated list of email addresses'
  		f.input :subject
  		f.input :body, :input_html => { :id => :mail_body }, :required => true
  	end
  end

  f.buttons
end %>