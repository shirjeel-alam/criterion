<%= semantic_form_for [:admin, @payment], :builder => ActiveAdmin::FormBuilder do |f|
  f.inputs do
    if params[:teacher_id] || params[:staff_id] || params[:partner_id]
      f.input :amount, :required => true
      f.input :payment_method, :as => :radio, :collection => Payment.payment_methods, :required => true
      f.input :additional_info
      f.input :status, :as => :hidden
      f.input :category_id, :as => :hidden
      f.input :payment_type, :as => :hidden
      f.input :payment_date, :as => :hidden
      f.input :payable_id, :as => :hidden
      f.input :payable_type, :as => :hidden
    else
      f.input :amount, :required => true
      f.input :status, :as => :radio, :collection => Payment.statuses, :required => true
      f.input :category_id, :as => :select, :collection => Category.categories, :required => true, :include_blank => false, :input_html => { :class => 'chosen-select' }
      f.input :payment_type, :as => :radio, :collection => Payment.payment_types, :required => true
      f.input :payment_method, :as => :radio, :collection => Payment.payment_methods, :required => true
      f.input :payment_date, :as => :datepicker, :required => true
      f.input :additional_info
      f.input :payable_id, :as => :hidden
      f.input :payable_type, :as => :hidden
    end
  end
  
  f.buttons
end %>